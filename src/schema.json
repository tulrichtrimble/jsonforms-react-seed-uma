{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "Companies": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "properties": {
                            "Company1": {
                                "title": "Company1",
                                "properties": {
                                    "cost-centers": {
                                        "items": {
                                            "properties": {
                                                "cost-center": {
                                                    "enum": [
                                                        "1050",
                                                        "1051",
                                                        "General"
                                                    ]
                                                },
                                                "role": {
                                                    "$ref": "#/$defs/role"
                                                }
                                            },
                                            "required": [
                                                "cost-center",
                                                "role"
                                            ],
                                            "additionalProperties": false
                                        }
                                    }
                                },
                                "required": [
                                    "cost-centers"
                                ],
                                "additionalProperties": false
                            }
                        },
                        "additionalProperties": false
                    },
                    {
                        "properties": {
                            "Company1": {
                                "title": "Company2",
                                "properties": {
                                    "cost-centers": {
                                        "items": {
                                            "properties": {
                                                "cost-center": {
                                                    "enum": [
                                                        "1099",
                                                        "1051",
                                                        "General"
                                                    ]
                                                },
                                                "role": {
                                                    "$ref": "#/$defs/role"
                                                }
                                            },
                                            "required": [
                                                "cost-center",
                                                "role"
                                            ],
                                            "additionalProperties": false
                                        }
                                    }
                                },
                                "required": [
                                    "cost-centers"
                                ],
                                "additionalProperties": false
                            }
                        },
                        "additionalProperties": false
                    }
                ]
            }
        }
    },
    "required": [
        "Companies"
    ],
    "$defs": {
        "role": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "Accountant",
                    "Account Payable Clerk",
                    "Manager",
                    "Project Manager"
                ]
            }
        }
    }
}